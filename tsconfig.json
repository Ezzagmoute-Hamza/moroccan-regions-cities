{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "es2016",                   
    "module": "commonjs",                      
    "moduleResolution": "node",              
    "outDir": "./dist",                      
    "rootDir": "./src",                      
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,
    "resolveJsonModule": true                
  },
  "include": ["src/**/*.ts"],               
  "exclude": ["node_modules"]                
}
