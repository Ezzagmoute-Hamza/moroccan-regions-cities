{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "es2019",                   
    "lib": ["es2019"],                    
    "module": "commonjs",                      
    "moduleResolution": "node",              
    "outDir": "./dist",                      
    "rootDir": "./src",                      
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
